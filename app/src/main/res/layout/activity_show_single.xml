<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ShowSingle" >

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

		<Button
		    android:id="@+id/send_button"
		    android:layout_width="@dimen/img_button"
		    android:layout_height="@dimen/img_button"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:layout_marginTop="@dimen/ss_button_mtop"
		    android:layout_marginRight="@dimen/ss_button_mside"
		    android:background="@drawable/ic_menu_share" />

		<Button
		    android:id="@+id/copy_button"
		    android:layout_width="@dimen/img_button"
		    android:layout_height="@dimen/img_button"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:layout_marginTop="@dimen/ss_button_mtop"
		    android:layout_marginLeft="@dimen/ss_button_mside"
		    android:background="@drawable/ic_menu_copy_holo_dark" />
	
	</RelativeLayout>
    
    <ScrollView
        android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginTop="60dp" >
        
	    <TextView
	        android:id="@+id/show"
	        android:gravity="center"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/text_size"
	        android:textColor="@color/text_color" />    
	</ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.werebug.randomsequencegenerator"
    android:versionCode="210"
    android:versionName="2.1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:allowBackup="true" >
        
        <activity
            android:name="com.werebug.randomsequencegenerator.Rsg_main"
            android:label="@string/title_activity_rsg_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name="com.werebug.randomsequencegenerator.ShowSaved"
            android:label="@string/title_activity_show_saved" >
        </activity>
        <activity
            android:name="com.werebug.randomsequencegenerator.ShowSingle"
            android:label="@string/title_activity_show_single" >
        </activity>
    </application>

</manifest>